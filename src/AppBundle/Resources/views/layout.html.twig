{% extends '::base.html.twig' %}

{% block stylesheets %}
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
<style media="screen">
  body {
    font-family: arial;
    text-align: center;
    margin: 0;
    padding: 0;
    height: 100vh;
    width: 100%;
    display: flex;
    justify-content: center;
  }

  .container {
    margin-top: 50px;
  }

  .controls table {
    margin: 10px auto;
  }

  .controls table td {
    padding: 10px;
    font-size: 10px;
  }

  .mainTable {
    border-collapse: collapse;
  }
  .mainTable td {
    border: 2px solid #444;
  }

  .red {
    color: red;
  }

  .blue {
    color: blue;
  }
</style>
{% endblock %}
